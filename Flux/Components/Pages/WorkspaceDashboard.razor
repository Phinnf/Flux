@page "/workspace/{Id:guid}/dashboard"
@layout Flux.Components.Layout.WorkspaceLayout

<PageTitle>Workspace Dashboard - Flux</PageTitle>

<FluentStack Orientation="Orientation.Vertical" VerticalGap="20">
    <FluentBreadcrumb>
        <FluentBreadcrumbItem Href="/">Flux</FluentBreadcrumbItem>
        <FluentBreadcrumbItem>Workspace Dashboard</FluentBreadcrumbItem>
    </FluentBreadcrumb>

    <div style="margin-top: 20px;">
        <FluentLabel Typo="Typography.H2">Welcome to your Workspace!</FluentLabel>
        <FluentLabel Typo="Typography.Body">Workspace ID: @Id</FluentLabel>
    </div>

    <FluentDivider Style="width: 100%; margin: 20px 0;" />

    <FluentGrid Spacing="3">
        <FluentGridItem xs="12" sm="6">
            <FluentCard>
                <FluentStack Orientation="Orientation.Vertical" VerticalGap="10">
                    <FluentLabel Typo="Typography.H3">Recent Messages</FluentLabel>
                    <FluentLabel Typo="Typography.Body">No recent messages in this workspace.</FluentLabel>
                    <FluentButton Appearance="Appearance.Outline">Go to Channels</FluentButton>
                </FluentStack>
            </FluentCard>
        </FluentGridItem>
        <FluentGridItem xs="12" sm="6">
            <FluentCard>
                <FluentStack Orientation="Orientation.Vertical" VerticalGap="10">
                    <FluentLabel Typo="Typography.H3">Pending Tasks</FluentLabel>
                    <FluentLabel Typo="Typography.Body">You have 0 pending tasks.</FluentLabel>
                    <FluentButton Appearance="Appearance.Outline">Open Task Board</FluentButton>
                </FluentStack>
            </FluentCard>
        </FluentGridItem>
    </FluentGrid>
</FluentStack>

@code {
    [Parameter]
    public Guid Id { get; set; }
}
